<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vBox" alignment="CENTER" focusTraversable="true" prefHeight="309.0" prefWidth="290" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chat.ChatController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="0" />
    </padding>

    <TextArea fx:id="textAreaMain" focusTraversable="false" prefHeight="263.0" prefWidth="264.0" style="-fx-background-color: PINK;">
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <cursor>
         <Cursor fx:constant="DEFAULT" />
      </cursor></TextArea>

   <HBox maxWidth="290" prefHeight="25.0" prefWidth="290" spacing="2.0">
       <TextField fx:id="textFieldChat" maxWidth="302.0" onAction="#textFieldChatSend" prefHeight="25.0" prefWidth="302.0">
       </TextField>
       <Button fx:id="btnSend" defaultButton="true" maxWidth="123.0" mnemonicParsing="false" onAction="#btnSendOneClickAction" prefHeight="25.0" prefWidth="123.0" text="Send" />
   </HBox>

</VBox>
